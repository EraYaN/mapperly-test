<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Configurations>Debug;Release;DebugWithSetters;ReleaseWithSetters</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Grpc.AspNetCore" Version="2.66.0" />
    <PackageReference Include="Grpc.Tools" Version="2.67.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Riok.Mapperly" Version="4.1.0-next.0" />
  </ItemGroup>

	<ItemGroup>
		<Protobuf Include="Protos\service.proto" GrpcServices="Client, Server" />
	</ItemGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'DebugWithSetters' Or '$(Configuration)' == 'ReleaseWithSetters'">
    <DefineConstants>HAVE_SETTERS</DefineConstants>
  </PropertyGroup>

</Project>
